%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        - if @video.large_cover_url
          %img(src="#{@video.large_cover_url}")
        - else
          %img(src="http://dummyimage.com/665x375/000000/00a2ff")
      .video_info.col-sm-3
        %header
          %h3= "#{@video.title}"
          %span Rating: 4.5/5.0
        %p= "#{@video.description}"
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video, @review] do |f|
        - @review.errors.full_messages.each do |msg|
          %div(class="alert alert-danger")
            %a.close(data-dismiss='alert') &#215;
            %p= msg
        %fieldset
          .form-group
            = f.label :rate, "Rate this video"
            .row
              .col-sm-3
                = f.select :rate, options_for_select(rate_options), {}, class: "form-control"
          .form-group
            = f.label :content, "Write Review"
            .row
              .col-sm-8
                = f.text_area :content, class: "form-control", rows: "6"
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit", class: "btn"
          = link_to "Cancel", @video
      %header
        %h3 User Reviews (#{@video.reviews.count})
      %ul
        - @video.reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rate} / 5
                %p= link_to "#{review.user.name}", "#"
              .col-sm-8
                %p #{review.content}

