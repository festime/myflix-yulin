%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password, label: "Password"
          = f.text_field :name, label: "Full Name"
          = hidden_field_tag :token, @token
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %script.stripe-button{"data-amount" => "999", "data-description" => "Sign Up Charge for MyFlix ($9.99)", "data-key" => "#{ENV['STRIPE_TEST_PUBLISHABLE_KEY']}", "data-name" => "MyFlix Sign Up", :src => "https://checkout.stripe.com/checkout.js"}
              :cdata
